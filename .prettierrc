{
  "singleQuote": true,
  "overrides": [
    {
      "files": ["*.md"],
      "options": {
        "parser": "markdown-nocjsp"
      }
    },
    {
      "files": ["*.mdx"],
      "options": {
        "parser": "mdx-nocjsp"
      }
    },
    {
      "files": ["*.xsd"],
      "options": {
        "xmlWhitespaceSensitivity": "ignore"
      }
    },
    {
      "files": ["*.json"],
      "options": {
        "singleQuote": false
      }
    }
  ]
}
