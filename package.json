{
  "name": "apm-web",
  "version": "1.0.0",
  "description": "apm-web is a web-based tool to edit package data of AviUtl Package Manager.",
  "keywords": [
    "aviutl",
    "aviutl-package-manager"
  ],
  "homepage": "https://team-apm.github.io/apm-web",
  "license": "MIT",
  "author": "Mitosagi",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "run-s lint:prettier lint:eslint",
    "lint:prettier": "prettier --check .",
    "lint:eslint": "eslint --fix-dry-run .",
    "fix": "run-s fix:prettier fix:eslint",
    "fix:prettier": "prettier --write .",
    "fix:eslint": "eslint --fix .",
    "prepare": "husky install",
    "predeploy": "run-s build",
    "deploy": "gh-pages -d build",
    "prepare:libarchive": "cp -rf ./node_modules/libarchive.js/dist ./public/"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.5",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^12.1.5",
    "@testing-library/user-event": "^14.2.0",
    "bootstrap": "^5.1.3",
    "bootstrap-dark-5": "^1.1.3",
    "bootstrap-icons": "^1.8.2",
    "encoding-japanese": "^2.0.0",
    "fast-xml-parser": "^4.0.7",
    "fuse.js": "^6.6.2",
    "jszip": "^3.10.0",
    "libarchive.js": "^1.3.0",
    "path-browserify": "^1.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-dropzone": "^14.2.1",
    "react-scripts": "5.0.1",
    "sortablejs": "^1.15.0",
    "survey-react": "^1.9.31",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "eslint": "^8.16.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.5.0",
    "gh-pages": "^4.0.0",
    "husky": "^8.0.1",
    "lint-staged": "^12.4.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "prettier-plugin-md-nocjsp": "^1.1.1"
  },
  "private": true,
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,html,css,md,xml,xsd}": "prettier --write"
  }
}
