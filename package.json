{
  "name": "apm-web",
  "version": "1.0.0",
  "private": true,
  "description": "apm-web is a web-based tool to edit package data of AviUtl Package Manager.",
  "keywords": [
    "aviutl",
    "aviutl-package-manager"
  ],
  "license": "MIT",
  "author": "Mitosagi",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "run-s -c lint:ts lint:next lint:prettier",
    "lint:next": "next lint --dir src",
    "lint:prettier": "prettier --check --ignore-path .gitignore .",
    "lint:ts": "tsc --incremental false --noEmit",
    "fix": "run-s fix:next fix:prettier",
    "fix:next": "next lint --fix --dir src",
    "fix:prettier": "prettier --write --ignore-path .gitignore .",
    "telemetry-disable": "yarn run next telemetry disable",
    "prepare": "run-s prepare:husky prepare:libarchive",
    "prepare:husky": "husky",
    "prepare:libarchive": "cpx \"./node_modules/libarchive.js/dist/**\" ./public/dist/",
    "deploy": "run-s build deploy:gh-pages",
    "deploy:gh-pages": "gh-pages -d out"
  },
  "dependencies": {
    "bootstrap": "^5.3.3",
    "bootstrap-icons": "^1.11.3",
    "encoding-japanese": "^2.2.0",
    "fuse.js": "^7.0.0",
    "jszip": "^3.10.1",
    "libarchive.js": "^2.0.2",
    "next": "^15.1.4",
    "path-browserify": "^1.0.1",
    "react": "^19.0.0",
    "react-bootstrap": "^2.10.7",
    "react-dom": "^19.0.0",
    "react-dropzone": "^14.3.5",
    "react-sortablejs": "^6.1.4",
    "sortablejs": "^1.15.6",
    "survey-core": "^1.12.18",
    "survey-react-ui": "^1.12.18",
    "typescript": "^5.7.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.17.0",
    "@types/bootstrap": "^5.2.10",
    "@types/encoding-japanese": "^2.2.1",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/eslint__eslintrc": "^2.1.2",
    "@types/lint-staged": "^13.3.0",
    "@types/node": "^22.10.5",
    "@types/path-browserify": "^1.0.3",
    "@types/react": "^19.0.4",
    "@types/react-dom": "^19.0.2",
    "@types/sortablejs": "^1.15.8",
    "apm-schema": "team-apm/apm-schema#v3.3.0",
    "cpx": "^1.5.0",
    "eslint": "^9.17.0",
    "eslint-config-next": "^15.1.4",
    "eslint-config-prettier": "^9.1.0",
    "gh-pages": "^6.3.0",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.3.0",
    "npm-run-all2": "^7.0.2",
    "prettier": "^3.4.2",
    "prettier-plugin-packagejson": "^2.5.6",
    "typescript-eslint": "^8.19.1"
  },
  "packageManager": "yarn@1.22.22"
}
