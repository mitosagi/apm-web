{
  "name": "apm-web",
  "version": "1.0.0",
  "description": "apm-web is a web-based tool to edit package data of AviUtl Package Manager.",
  "keywords": [
    "aviutl",
    "aviutl-package-manager"
  ],
  "license": "MIT",
  "author": "Mitosagi",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "run-s lint:prettier lint:next",
    "lint:prettier": "prettier --check --ignore-path .gitignore .",
    "lint:next": "next lint --dir src",
    "fix": "run-s fix:prettier fix:next",
    "fix:prettier": "prettier --write --ignore-path .gitignore .",
    "fix:next": "next lint --fix --dir src",
    "telemetry-disable": "yarn run next telemetry disable",
    "prepare": "run-s prepare:husky prepare:libarchive",
    "prepare:husky": "husky install",
    "prepare:libarchive": "cpx \"./node_modules/libarchive.js/dist/**\" ./public/dist/",
    "deploy": "run-s build deploy:gh-pages",
    "deploy:gh-pages": "gh-pages -d out"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.8",
    "bootstrap": "^5.3.2",
    "bootstrap-dark-5": "^1.1.3",
    "bootstrap-icons": "^1.11.1",
    "encoding-japanese": "^2.0.0",
    "fuse.js": "^6.6.2",
    "jszip": "^3.10.1",
    "libarchive.js": "^1.3.0",
    "next": "^13.5.5",
    "path-browserify": "^1.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.2.3",
    "sortablejs": "^1.15.0",
    "survey-react": "^1.9.112",
    "typescript": "^5.2.2"
  },
  "devDependencies": {
    "@types/bootstrap": "^5.2.7",
    "@types/encoding-japanese": "^2.0.2",
    "@types/libarchive.js": "^1.3.2",
    "@types/node": "^20.8.6",
    "@types/path-browserify": "^1.0.0",
    "@types/react": "^18.2.28",
    "@types/react-dom": "^18.2.13",
    "@types/sortablejs": "^1.15.3",
    "apm-schema": "team-apm/apm-schema#v3.2.1",
    "cpx": "^1.5.0",
    "eslint": "^8.51.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-next": "^13.5.5",
    "eslint-config-prettier": "^9.0.0",
    "gh-pages": "^6.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.3"
  },
  "private": true
}
