{
  "name": "apm-web",
  "version": "1.0.0",
  "description": "apm-web is a web-based tool to edit package data of AviUtl Package Manager.",
  "keywords": [
    "aviutl",
    "aviutl-package-manager"
  ],
  "homepage": "https://team-apm.github.io/apm-web",
  "license": "MIT",
  "author": "Mitosagi",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "run-s lint:prettier lint:eslint",
    "lint:prettier": "prettier --check .",
    "lint:eslint": "eslint --fix-dry-run .",
    "fix": "run-s fix:prettier fix:eslint",
    "fix:prettier": "prettier --write .",
    "fix:eslint": "eslint --fix .",
    "prepare": "run-s prepare:husky prepare:libarchive",
    "prepare:husky": "husky install",
    "prepare:libarchive": "cpx \"./node_modules/libarchive.js/dist/**\" ./public/dist/",
    "deploy": "run-s build deploy:gh-pages",
    "deploy:gh-pages": "gh-pages -d build"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.6",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "bootstrap": "^5.2.3",
    "bootstrap-dark-5": "^1.1.3",
    "bootstrap-icons": "^1.10.3",
    "encoding-japanese": "^2.0.0",
    "fuse.js": "^6.6.2",
    "jszip": "^3.10.1",
    "libarchive.js": "^1.3.0",
    "path-browserify": "^1.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.2.3",
    "react-scripts": "5.0.1",
    "sortablejs": "^1.15.0",
    "survey-react": "^1.9.79",
    "typescript": "^5.0.2",
    "web-vitals": "^3.3.0"
  },
  "devDependencies": {
    "@types/bootstrap": "^5.2.6",
    "@types/encoding-japanese": "^2.0.1",
    "@types/libarchive.js": "^1.3.1",
    "@types/path-browserify": "^1.0.0",
    "@types/sortablejs": "^1.15.1",
    "apm-schema": "team-apm/apm-schema#v3.2.1",
    "cpx": "^1.5.0",
    "eslint": "^8.36.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.8.0",
    "gh-pages": "^5.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.7",
    "prettier-plugin-md-nocjsp": "^1.5.1"
  },
  "private": true,
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,html,css,md,xml,xsd}": "prettier --write"
  }
}
