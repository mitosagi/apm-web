{
  "root": true,
  "env": {
    "browser": true,
    "es2022": true
  },
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "extends": ["next/core-web-vitals", "google", "prettier"],
  "rules": {
    "prefer-arrow-callback": "error",
    "require-jsdoc": "off",
    "new-cap": ["error", { "capIsNew": false }],
    "react/display-name": "off"
  }
}
